/* pages/item/item.wxss */
.detailContent{
  display: flex;
  flex-direction: column;
}
.detailImg{
  width: 100%;
  height: 460rpx;
}
.musicImg{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}
.detailAvatar image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin:10rpx;
}
.detailAvatar text{
  font-size: 28rpx;
  margin-right: 10rpx;
}
.detailCompony{
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 20rpx;
}
.lineImage{
  position: relative;
}
.lineImg{
  float: right;
  margin-right:60rpx;

}
.lineImg image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
}
.lineImage .line{
  position: absolute;
  top: 45rpx;
  left: 5%;
  height: 1rpx;
  width: 90%;
  background: gainsboro;
  z-index: -1;
}
.btn{
  width: 300rpx;
}
.detailText{
  font-size:32rpx;
  line-height:2;
  text-indent:28rpx;

}